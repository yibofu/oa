.top-con{
    width: 100%;
    height: 250px;
    margin-bottom: 20px;
}
.headerImg{
    width: 250px;
    height: 100%;
    float: left;
    position: relative;
}
.headerImg img{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.top-right{
    width: 100%;
    height: 100%;
    padding:20px 0 20px 300px;
    box-sizing: border-box;
    position: relative;
}
.top-right-in{
    width:100%;
    height:100%;
}
.top-right-info{
    width: 100%;
    height: 25%;
    display: flex;
    /*justify-content: center;*/
    align-items: center;
}
.top-right-info img{
    width: 36px;
    height: 36px;
    margin-right: 20px;
}
.top-right-info span{
    font-size: 22px;
    font-weight: bold;
}
.edit-btn{
    position: absolute;
    top: 0;
    right: 0;
}
.edit-btns{
    position: absolute;
    top: 0;
    right: 100px;
}
.distance{
    margin-bottom: 20px;
}
.addContract{
    width: 30px;
    height: 30px;
}
.file{
    position: absolute;
    top:0;
    left: 0;
    width:100%;
    height:100%;
    opacity: 0;
    cursor: pointer;
}