<div>
    <div v-show="topBtnShow" style="padding-bottom: 30px;">
        <el-button @click="checkInfo(0)" icon="el-icon-circle-plus-outline" size="small" type="primary">增 加</el-button>
        <!--<el-button @click="checkInfo(1)" icon="el-icon-search" size="small" type="primary">查 看</el-button>-->
        <!--<el-button @click="checkInfo(2)" icon="el-icon-edit" size="small" type="warning">修 改</el-button>-->
        <el-button @click="checkInfo(3)" icon="el-icon-delete" size="small" type="danger">删 除</el-button>
        <el-button @click="resetChecked(4)" icon="el-icon-refresh" size="small" type="warning">取消勾选</el-button>
        <el-button @click="exportExcel" icon="el-icon-download" size="small" type="success">导出</el-button>
    </div>
    <el-tabs :tab-position="tabPosition"  @tab-click="handleClick">
        <el-tab-pane label="部门列表">
            <el-tree
                    check-strictly
                    :data="departments"
                    show-checkbox
                    default-expand-all
                    node-key="id"
                    ref="tree"
                    highlight-current
                    @node-click="changeCheckNode"
                    :props="defaultProps">
            </el-tree>
            <div class="tree-right-table">
                <department-info ref="info"></department-info>
            </div>
        </el-tab-pane>
        <el-tab-pane label="树形图">
            <department-orgchart></department-orgchart>
        </el-tab-pane>
    </el-tabs>
</div>