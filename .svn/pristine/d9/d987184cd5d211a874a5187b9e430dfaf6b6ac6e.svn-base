    //删除方法
    public function delete(){
        $id = I("get.id");
        $length = strlen($id);
        $manage = D("manage");
        if($length == 1){
            $where = 'id='.$id;
        }else{
            $id = array($id);
            $where = 'id in('.implode(',',$id).')';
        }
        $result=$manage->where($where)->delete();
        if($result){
            $error = 0;
        }else{
            $error = 1;
        }
        self::jsons($error,$result);
    }

