.product th input{
    width:100%;
    height:100%;
    text-indent: 10px;
}
.product th textarea{
    width:100%;
    height:100%;
    box-sizing: border-box;
    resize: none;
    outline:none;
    border: 0;
    padding: 15px;
}
.product th{
    padding: 0;
    border: 1px solid #000;
}
.dropdown-menu{
    position: absolute;
    border: 1px solid #ccc;
    border-radius: 5px;
    z-index: 2018;
    background-color: #fff;
}